  "usage_instructions": {
    "purpose": "Validate Mars time engine implementations against known NASA values",
    "test_procedure": [
      "1. Parse each test case earth_utc timestamp",
      "2. Run through Mars time calculation engine",
      "3. Compare output to expected_output",
      "4. Assert difference is within epsilon thresholds",
      "5. All 'critical' priority tests must pass",
      "6. 90%+ of all tests should pass"
    ],
    "epsilon_guidelines": {
      "julian_date": "±0.000001 days (0.0864 seconds)",
      "mars_sol_date": "±0.000001 sols",
      "time_components": "±1 second acceptable"
    }
  },
  "known_limitations": [
    "Leap seconds: Dataset assumes 37 leap seconds (valid through 2026)",
    "Future dates: Accuracy beyond 2026 requires updated ΔT values",
    "Pre-2000 dates: Not included due to increasing leap second uncertainty",
    "LMST: Longitude values use planetographic convention (East positive)"
  ]
}
